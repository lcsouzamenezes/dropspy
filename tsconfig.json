{
  "ts-node": {
    // "require": ["tsconfig-paths/register"],
    // "esm": true
  },
  "compilerOptions": {
    "target": "ES2017",
    "module": "CommonJS",
    "rootDir": ".",
    "outDir": "./dist",
    "typeRoots": [
      "./node_modules/@types/",
      "./src/@types/"
    ],
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "allowJs": true,
    "forceConsistentCasingInFileNames": true,
    "strict": false,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules/",
    "tests/",
    "local/",
    "extensions_unziped/",
    "jest.config.ts"
  ],
  "include": [
    "configs/",
    "src/",
    "utils/",
  ]
}
